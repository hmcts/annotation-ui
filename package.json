{
  "name": "annotation-ui",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start-server": "node application.js",
    "start-client": "ng serve --proxy-config proxy.config.json",
    "build": "ng build",
    "postBuild": "ts-node ./scripts/css-bundle.ts",
    "copy-license": "cp ./README.md dist/hmcts-annotation-ui-lib",
    "copy-readme": "cp ./LICENSE dist/hmcts-annotation-ui-lib",
    "copy-files": "npm run copy-readme && npm run copy-license",
    "build-lib": "ng build --prod hmcts-annotation-ui-lib && cp -R projects/hmcts-annotation-ui-lib/src/assets/ dist/hmcts-annotation-ui-lib/assets/",
    "npm-pack": "cd dist/hmcts-annotation-ui-lib && npm pack",
    "package": "npm run build-lib && npm run copy-files && npm run npm-pack",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.1.10",
    "@angular/common": "^6.1.10",
    "@angular/compiler": "^6.1.10",
    "@angular/core": "^6.1.10",
    "@angular/forms": "^6.1.10",
    "@angular/http": "^6.1.10",
    "@angular/platform-browser": "^6.1.10",
    "@angular/platform-browser-dynamic": "^6.1.10",
    "@angular/router": "^6.1.10",
    "@ng-toolkit/universal": "^1.1.45",
    "body-parser": "^1.18.3",
    "cookie-parser": "^1.4.3",
    "core-js": "^2.6.1",
    "cors": "^2.8.5",
    "glob": "^7.1.3",
    "jwt-decode": "^2.2.0",
    "otp": "^0.1.3",
    "request-promise": "^4.2.2",
    "rxjs": "^6.3.3",
    "scss-bundle": "^2.4.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.7.0",
    "@angular-devkit/build-ng-packagr": "~0.7.0",
    "@angular/cli": "~6.1.5",
    "@angular/compiler-cli": "^6.1.10",
    "@angular/language-service": "^6.1.10",
    "@types/jasmine": "^2.8.14",
    "@types/jasminewd2": "^2.0.6",
    "@types/node": "^8.10.39",
    "codelyzer": "~4.2.1",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~1.7.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.0",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "ng-packagr": "^4.4.5",
    "protractor": "^5.4.2",
    "ts-node": "^5.0.1",
    "tsickle": "^0.34.0",
    "tslib": "^1.9.0",
    "tslint": "~5.9.1",
    "typescript": "~2.7.2"
  }
}
